<Window x:Class="Cloure.frmLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cloure"
        mc:Ignorable="d"
        Title="Iniciar sesión" Height="450" Width="800" WindowState="Maximized">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Resources/bg2_v_1_1_1920_1080.jpg"/>
        </Grid.Background>
        <StackPanel HorizontalAlignment="Center" Height="200" Margin="0,80,0,0" VerticalAlignment="Top" Width="250">
            <Label Content="Usuario o email" Foreground="White"/>
            <TextBox x:Name="txtUser" Height="20" TextWrapping="Wrap"/>
            <Label Content="Clave" Foreground="White"/>
            <PasswordBox x:Name="txtPass" Height="20"/>
            <Button x:Name="btnLogin" Content="Ingresar" Margin="0,20,0,0" Click="BtnLogin_Click"/>
        </StackPanel>
        <Image HorizontalAlignment="Center" Height="32" Margin="303,28,303,0" VerticalAlignment="Top" Width="186" Source="Resources/logo.png"/>

    </Grid>
</Window>
